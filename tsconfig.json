    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "module": "NodeNext",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  
}
